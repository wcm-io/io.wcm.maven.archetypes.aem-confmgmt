<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.wcm.maven</groupId>
    <artifactId>io.wcm.maven.parent</artifactId>
    <version>1.2.2</version>
    <relativePath />
  </parent>

  <groupId>io.wcm.maven.archetypes</groupId>
  <artifactId>io.wcm.maven.archetypes.aem-confmgmt</artifactId>
  <version>1.2.7-SNAPSHOT</version>
  <packaging>maven-archetype</packaging>

  <name>wcm.io Maven Archetype for AEM Configuration Management</name>
  <description>Maven Archetype for creating infrastructure deployment and configuration management projects for AEM.</description>
  <url>${site.url}/${site.url.module.prefix}/</url>

  <properties>
    <site.url.module.prefix>tooling/maven/archetypes/aem-confmgmt</site.url.module.prefix>
    <maven.archetype.version>3.1.2</maven.archetype.version>
    <!-- Control execution of archetype integration tests via -Pfast or -Dmaven.test.skip -->
    <archetype.test.skip>${integrationtests.skip}</archetype.test.skip>
  </properties>

  <scm>
    <connection>scm:git:https://github.com/wcm-io/wcm-io-maven-archetype-aem-confmgmt.git</connection>
    <developerConnection>scm:git:https://github.com/wcm-io/wcm-io-maven-archetype-aem-confmgmt.git</developerConnection>
    <url>https://github.com/wcm-io/wcm-io-maven-archetype-aem-confmgmt</url>
    <tag>HEAD</tag>
  </scm>

  <ciManagement>
    <system>GitHub Actions</system>
    <url>https://github.com/wcm-io/wcm-io-maven-archetype-aem-confmgmt/actions</url>
  </ciManagement>
  
  <dependencies>

    <!-- Workaround for resolving dependencies via Grapes on GitHub Actions - references them here as test deps as well -->
    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy-xml</artifactId>
      <version>2.4.21</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.wcm.devops.conga.plugins</groupId>
      <artifactId>conga-aem-crypto-cli</artifactId>
      <version>1.14.0</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.archetype</groupId>
        <artifactId>archetype-packaging</artifactId>
        <version>${maven.archetype.version}</version>
      </extension>
    </extensions>

    <plugins>

      <!-- Skip JSON validation -->
      <plugin>
        <groupId>org.apache.sling</groupId>
        <artifactId>sling-maven-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <!-- Do not generate eclipse project files -->
      <plugin>
        <groupId>io.wcm.devops.maven.plugins</groupId>
        <artifactId>eclipse-maven-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <!-- Set property ${releasedVersion.version} for current project - to be used in maven site -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>released-version</id>
            <goals>
              <goal>released-version</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <topSiteURL>${site.deploy.url}</topSiteURL>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-publish-plugin</artifactId>
        <configuration>
          <subDirectory>${site.url.module.prefix}</subDirectory>
          <skipDeletedFiles>true</skipDeletedFiles>
        </configuration>
      </plugin>

    </plugins>

    <pluginManagement>
      <plugins>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-archetype-plugin</artifactId>
          <version>${maven.archetype.version}</version>
        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-resources-plugin</artifactId>
           <configuration>
             <!-- Make sure .git* files can be included as well -->
             <addDefaultExcludes>false</addDefaultExcludes>
           </configuration>
        </plugin>

        <plugin>
          <groupId>com.amashchenko.maven.plugin</groupId>
          <artifactId>gitflow-maven-plugin</artifactId>
          <configuration>
            <!-- Do not prefix release numbers with artifactId - GIT contains only one released artifact -->
            <gitFlowConfig combine.self="override">
              <releaseBranchPrefix>release/</releaseBranchPrefix>
              <hotfixBranchPrefix>hotfix/</hotfixBranchPrefix>
              <versionTagPrefix />
            </gitFlowConfig>
          </configuration>
        </plugin>
        <plugin>
          <groupId>external.atlassian.jgitflow</groupId>
          <artifactId>jgitflow-maven-plugin</artifactId>
          <configuration>
            <!-- Do not prefix release numbers with artifactId - GIT contains only one released artifact -->
            <flowInitContext combine.self="override">
              <releaseBranchPrefix>release/</releaseBranchPrefix>
              <hotfixBranchPrefix>hotfix/</hotfixBranchPrefix>
              <versionTagPrefix />
            </flowInitContext>
          </configuration>
        </plugin>

      </plugins>
    </pluginManagement>
  </build>

  <distributionManagement>
    <site>
      <id>${site.deploy.id}</id>
      <url>${site.deploy.url}</url>
    </site>
  </distributionManagement>

</project>
