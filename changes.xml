<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/changes/1.0.0"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <body>

    <release version="1.2.6" date="not released">
      <action type="update" dev="sseifert">
        Use latest version of io.wcm.maven.aem-global-parent when generating an new project.
      </action>
    </release>

    <release version="1.2.4" date="2020-06-28">
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
    </release>

    <release version="1.2.2" date="2020-04-28">
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
    </release>

    <release version="1.2.0" date="2020-01-30">
      <action type="add" dev="nbellack">
        Interactively ask for Ansible Vault password on Vagrant provision if the file is not provided.
      </action>
      <action type="update" dev="sseifert">
        AEM Crypto Keys: Do not decrypt them during configuration generation, this is done by Ansible automatically.
      </action>
      <action type="update" dev="nbellack">
        Update Ansible version to 2.7.13.
      </action>
      <action type="update" dev="trichter">
        Update Ansible roles to latest releases.
      </action>
    </release>

    <release version="1.1.0" date="2019-10-02">
      <action type="add" dev="sseifert">
        Make AEM major version configurable. Defaults to AEM 6.5.
      </action>
      <action type="update" dev="sseifert">
        Change default AEM ports for author and publish instance for vagrant box to 8502, 8503.
      </action>
      <action type="update" dev="sseifert">
        Generate (random) Maven master password to encrypt maven settings in vagrant control host.
      </action>
      <action type="fix" dev="nbellack">
        Install PIP if not available.
      </action>
    </release>

    <release version="1.0.16" date="2019-08-23">
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
    </release>

    <release version="1.0.14" date="2019-06-26">
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
      <action type="fix" dev="trichter">
        Fix documentation links.
      </action>
    </release>

    <release version="1.0.12" date="2019-05-09">
      <action type="fix" dev="trichter">
        Delegate hosts file creation to localhost and use current user as owner.
      </action>
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
    </release>

    <release version="1.0.10" date="2019-03-15">
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
    </release>

    <release version="1.0.8" date="2019-01-16">
      <action type="update" dev="trichter">
        Update Ansible role dependencies.
      </action>
      <action type="update" dev="trichter">
        Update default JDK to 8u191.
      </action>
      <action type="fix" dev="trichter">
        Add vagrant-vbguest Vagrant plugin to fix missing guest additions after kernel upgrade and reboot.
      </action>
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
    </release>

    <release version="1.0.6" date="2018-12-05">
      <action type="update" dev="trichter">
        Update Ansible role dependencies.
      </action>
      <action type="update" dev="trichter">
        Update io.wcm.maven.aem-global-parent to 1.2.28.
      </action>
      <action type="fix" dev="trichter">
        Fix vagrant hostname when configurationManagementName contains dots.
      </action>
    </release>

    <release version="1.0.4" date="2018-09-14">
      <action type="add" dev="trichter">
        Hosts file creation on controlhost for non ec2 environments.
      </action>
      <action type="fix" dev="trichter">
        Remove usage of vagrant-vbguest plugin since it is not needed.
      </action>
      <action type="fix" dev="trichter">
        Fix ownership on projects dir in vagrant vm.
      </action>
    </release>

    <release version="1.0.2" date="2018-09-08">
      <action type="fix" dev="sseifert">
        Set executable flag on ansible/inventory/ec2.py.
      </action>
      <action type="fix" dev="sseifert">
        Fix setting of maven repository user/password in vault_credentials.yml.
      </action>
    </release>

    <release version="1.0.0" date="2018-09-05">
      <action type="add" dev="sseifert">
        Initial release.
      </action>
    </release>

  </body>
</document>
